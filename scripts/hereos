#!/usr/bin/env python

import getopt, sys

def usage():
  print "Welcome to HereOS"

def version():
  print "0.0.1"

def main():
		if len(sys.argv) == 1:
				usage()
				sys.exit()

		try:
				opts, args = getopt.getopt(sys.argv[1:], "hv", ["help", "version"])
		except getopt.GetoptError as err:
				# print help information and exit:
				print str(err)
				usage()
				sys.exit(2)
		for o, a in opts:
				if o in ("-v", "--version"):
						version()
						sys.exit()
	 			elif o in ("-h", "--help"):
						usage()
						sys.exit()
				else:
						assert False, "unhandled option"

if __name__ == "__main__":
		main()

